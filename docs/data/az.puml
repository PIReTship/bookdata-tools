@startuml

title AZ Ratings
skinparam linetype ortho

hide empty members
hide circle

entity isbn_id {
  isbn_id
  --
  isbn
}

entity isbn_cluster {
  cluster
  --
  isbn_id
}

isbn_cluster }|- isbn_id

entity raw_ratings {
    --
    user_key
    asin
    rating
    rating_time
}

entity user_ids <<derived>> {
    user_id
    --
    user_key
}

entity rating <<derived>> {
    user_id
    book_id
    --
    rating
    nactions
}

raw_ratings <. rating
raw_ratings <. user_ids

rating }|-- user_ids
rating }|- isbn_cluster : book_id:cluster

@enduml
